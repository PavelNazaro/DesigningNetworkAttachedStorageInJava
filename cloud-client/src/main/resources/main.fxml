<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="300.0" minWidth="300.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloud.storage.client.Controller">
   <MenuBar fx:id="menuBar">
      <Menu text="File">
         <MenuItem onAction="#pressButtonRefreshAll" text="Refresh all" />
         <MenuItem onAction="#pressButtonSelectAll" text="Select all" />
         <MenuItem onAction="#pressButtonCopy" text="Copy" />
         <MenuItem onAction="#pressButtonMove" text="Move" />
         <MenuItem onAction="#pressButtonDelete" text="Delete" />
         <MenuItem onAction="#pressButtonRename" text="Rename" />
         <SeparatorMenuItem />
         <MenuItem onAction="#handleExitAction" text="Exit" />
      </Menu>
      <Menu text="Help">
         <MenuItem onAction="#handleAboutAction" text="About" />
      </Menu>
   </MenuBar>
   <StackPane VBox.vgrow="ALWAYS">
      <BorderPane fx:id="authPanel" visible="false">
         <center>
            <VBox alignment="CENTER_LEFT" maxHeight="100.0" maxWidth="200.0" minHeight="100.0" minWidth="200.0">
               <Label alignment="CENTER" maxWidth="200.0" minWidth="100.0" prefWidth="200.0" text="Authenticate">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
               <Label text="Login:" />
               <TextField fx:id="loginFieldAuth" maxWidth="200.0" minWidth="100.0" onAction="#pressButtonSignInAuth" prefWidth="200.0" promptText="Enter you login" text="login" />
               <Label text="Password:" />
               <PasswordField fx:id="passFieldAuth" maxWidth="200.0" minWidth="100.0" onAction="#pressButtonSignInAuth" prefWidth="200.0" promptText="Enter you password" text="password" />
               <Button fx:id="buttonSignInAuth" maxWidth="100.0" minWidth="50.0" onAction="#pressButtonSignInAuth" prefWidth="100.0" text="Sign In" />
               <Label text="No account? Register:">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Label>
               <Button fx:id="buttonSignUpAuth" maxWidth="100.0" minWidth="50.0" onAction="#pressButtonSignUpAuth" prefWidth="100.0" text="Sign Up" />
            </VBox>
         </center>
      </BorderPane>
      <BorderPane fx:id="signUpPanel" visible="false">
         <center>
            <VBox alignment="CENTER_LEFT" maxHeight="100.0" maxWidth="200.0" minHeight="100.0" minWidth="200.0">
               <Label alignment="CENTER" maxWidth="200.0" minWidth="100.0" prefWidth="200.0" text="Add new user">
                  <font>
                     <Font size="18.0" />
                  </font></Label>
               <Label text="Enter new login:" />
               <TextField fx:id="loginFieldAdd" maxWidth="200.0" minWidth="100.0" onAction="#pressButtonSignUpAdd" prefWidth="200.0" />
               <Label text="Enter password:" />
               <PasswordField fx:id="passFieldAdd" maxWidth="200.0" minWidth="100.0" onAction="#pressButtonSignUpAdd" prefWidth="200.0" />
               <Button fx:id="buttonSignUpAdd" maxWidth="100.0" minWidth="50.0" onAction="#pressButtonSignUpAdd" prefWidth="100.0" text="Sign Up" />
               <Label text="Already have an account?">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Label>
               <Button fx:id="buttonSignInAdd" maxWidth="100.0" minWidth="50.0" onAction="#pressButtonSignInAdd" prefWidth="100.0" text="Sign In" />
            </VBox>
         </center>
      </BorderPane>
      <HBox fx:id="mainPanel" HBox.hgrow="ALWAYS">
         <TableView fx:id="tableViewClient" HBox.hgrow="ALWAYS" onMouseClicked="#mouseClickedTableViewClientFiles" minWidth="180.0" prefHeight="200.0" prefWidth="330.0">
           <columns>
             <TableColumn minWidth="100.0" prefWidth="250.0" text="Client files" />
             <TableColumn minWidth="50.0" text="Size, bytes" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         <VBox minHeight="300.0" minWidth="100.0" prefHeight="200.0" prefWidth="100.0">
            <Button fx:id="buttonRefreshAll" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#pressButtonRefreshAll" prefHeight="52.0" prefWidth="100.0" text="Refresh all" textAlignment="CENTER" wrapText="true">
            </Button>
            <Button fx:id="buttonSelectAll" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#pressButtonSelectAll" prefWidth="100.0" text="Select all" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets top="80.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="buttonCopy" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#pressButtonCopy" prefWidth="100.0" text="Copy" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="buttonMove" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#pressButtonMove" prefWidth="100.0" text="Move" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="buttonDelete" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#pressButtonDelete" prefWidth="100.0" text="Delete" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="buttonRename" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#pressButtonRename" prefWidth="100.0" text="Rename" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </VBox>
         <TableView fx:id="tableViewServer" HBox.hgrow="ALWAYS" onMouseClicked="#mouseClickedTableViewServerFiles" minWidth="180.0" prefHeight="200.0" prefWidth="330.0">
           <columns>
             <TableColumn minWidth="100.0" prefWidth="250.0" text="Server files" />
             <TableColumn minWidth="50.0" text="Size, bytes" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </HBox>
   </StackPane>
</VBox>
